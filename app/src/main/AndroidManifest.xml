<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.helwan.bis.review">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".screens.loginscreen.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.searchscreen.SearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.additemscreen.AddItemActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.itemdetailsscreen.ItemDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.itemsscreen.ItemsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.brandsscreen.BrandsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.homescreen.HomeActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>